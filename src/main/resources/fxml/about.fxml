<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import com.jfoenix.controls.JFXTextArea?>
<?import com.jfoenix.controls.JFXButton?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ajax.systems.company.hubs.controller.AboutController">
   <children>
   		<StackPane >
   			<GridPane fx:id="infoContainer" hgap="10.0" vgap="0">
		        <columnConstraints>
		          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
		          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
		        </columnConstraints>
		        <rowConstraints>
		            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
		          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
		          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
		          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
		        </rowConstraints>
		         <children>
		            <Label styleClass="about-desc" text="Distribuzione:" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
		            <Label styleClass="about-desc" text="JRE version:" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
		            <Label styleClass="about-desc" text="jfoenix version:" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />
		            <Label fx:id="distributionLabel" styleClass="about-val" text="unknown" GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="1" />
		            <Label fx:id="jreVersionLabel" styleClass="about-val" text="unknown" GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="2" />
		            <Label styleClass="about-val" text="19" GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="3" />
		            <Label styleClass="about-desc" text="Versione dell'App:" GridPane.halignment="RIGHT" />
		            <Label fx:id="versionLabel" styleClass="about-val" text="unknown" GridPane.columnIndex="1" GridPane.halignment="LEFT" />
		         </children>
      		</GridPane>
      		<VBox visible="false" fx:id="feedbackTextContainer" alignment="CENTER" spacing="10">
      			<children>
      				<JFXTextArea prefWidth="300" prefHeight="190" fx:id="feedbackText" promptText="Lascia qui il tuo feedback... :)"/>
      				<JFXButton prefWidth="150" fx:id="sendButton" styleClass="send-feedback-button, padding-5" buttonType="FLAT" disable="true" text="Invia"/>
      			</children>
      		</VBox>
      		
   		</StackPane>
      	<HBox fx:id="feedbackContainer" alignment="CENTER" spacing="5">
	         <padding>
	            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
	         </padding>
	         <children>
	            <Label styleClass="feedback-label1" text="Vorresti lasciare" />
	            <Label styleClass="feedback-label2" fx:id="feedBackLabel" text="feedback " />
	         </children>
      	</HBox>
   </children>
</VBox>
