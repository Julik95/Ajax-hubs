<HBox alignment="CENTER" spacing="50" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ajax.systems.company.hubs.controller.AboutController">
   <children>
   		<StackPane >
   			<ImageView styleClass="about-logo-image" fitHeight="128.0" fitWidth="128.0" pickOnBounds="true" preserveRatio="true" fx:id="logoImageView"/>
   		</StackPane>
   		<StackPane >
   			<GridPane fx:id="infoContainer" hgap="10.0" vgap="0">
		        <columnConstraints>
		          <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0"  />
		          <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0"  />
		        </columnConstraints>
		        <rowConstraints>
		            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
		          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
		          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
		          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
		        </rowConstraints>
		         <children>
		            <Label styleClass="about-desc" text="Distribuzione:" GridPane.halignment="LEFT" GridPane.rowIndex="1" />
		            <Label styleClass="about-desc" text="JRE version:" GridPane.halignment="LEFT" GridPane.rowIndex="2" />
		            <Label styleClass="about-desc" text="jfoenix version:" GridPane.halignment="LEFT" GridPane.rowIndex="3" />
		            <Label fx:id="distributionLabel" styleClass="about-val" text="Work in progress.." GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="1" />
		            <Label fx:id="jreVersionLabel" styleClass="about-val" text="Work in progress.." GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="2" />
		            <Label styleClass="about-val" text="19" GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="3" />
		            <Label styleClass="about-desc" text="Versione dell'App:" GridPane.halignment="LEFT" />
		            <Label fx:id="versionLabel" styleClass="about-val" text="Work in progress.." GridPane.columnIndex="1" GridPane.halignment="LEFT" />
		         </children>
      		</GridPane>		
   		</StackPane>
   </children>
</HBox>
